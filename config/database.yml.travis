default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: flashcards_development
  username: admin
  password: admin

test:
  <<: *default
  database: flashcards_test
  username: admin
  password: admin

production:
  <<: *default
  database: flashcards_production
  username: admin
  password: <%= ENV['TESTT_DATABASE_PASSWORD'] %>
